<h2>Pages</h2>

<ul>
  <li><%= link_to "Add a New Page", new_admin_page_path %></li>
</ul>

<%- if @pages.empty? -%>
  <p>No pages have been added yet.</p>
<%- else -%>
  <table>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>&nbsp;</th>
    </tr>
  
    <%- @pages.each do |page| -%>
      <tr>
        <td><%= page.title %> (<%= link_to "Edit", edit_admin_page_path(page) %>)</td>
        <td><%= page.url %></td>
        <td><%= link_to "Delete", admin_page_path(page), :method => :delete %></td>
      </tr>
    <%- end -%>
  
  </table>
<%- end -%>